<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.SignIn.SelectRole">

    <ImageView
        android:id="@+id/ivTraveler"
        android:layout_width="371dp"
        android:layout_height="308dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBuyer"
        app:srcCompat="@drawable/traveler" />

    <ImageView
        android:id="@+id/ivBuyer"
        android:layout_width="299dp"
        android:layout_height="233dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/ivTraveler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buyer" />
</androidx.constraintlayout.widget.ConstraintLayout>