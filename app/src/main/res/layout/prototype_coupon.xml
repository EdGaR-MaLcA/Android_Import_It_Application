<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCoupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:outlineSpotShadowColor="#000000"
    app:cardBackgroundColor="#DFECF6"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineSpotShadowColor="#000000">

        <ImageView
            android:id="@+id/ivCoupon"
            android:layout_width="98dp"
            android:layout_height="124dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coupon" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:textColor="#131313"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:textColor="#131313"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toBottomOf="@+id/tvCode"
            tools:text="Discount" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:textColor="#131313"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            tools:text="Code" />

        <EditText
            android:id="@+id/tvValidDate"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="#BAFFEB3B"
            android:backgroundTint="#F4F0CB"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toBottomOf="@+id/tvSituation"
            tools:text="date" />

        <TextView
            android:id="@+id/tvSituation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            android:textColor="#131313"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toBottomOf="@+id/tvDiscount"
            tools:text="Situation" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="223dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:textColor="#131313"
            app:layout_constraintStart_toEndOf="@+id/ivCoupon"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>